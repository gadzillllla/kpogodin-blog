  "dependencies": {
    "antd": "^3.10.3",
    "bowser": "^1.9.0",
    "classnames": "^2.2.6",
    "draft-convert": "^2.1.4",
    "draft-js-dnd-plugin": "^2.0.0-beta1",
    "draftjs-to-html": "^0.8.4",
    "draftjs-to-markdown": "^0.5.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "final-form": "^4.10.0",
    "firebase": "^5.3.1",
    "immutable": "^4.0.0-rc.12",
    "last-draft": "^3.3.0",
    "markdown-draft-js": "^1.2.0",
    "megadraft": "^0.6.2",
    "megadraft-js-export-markdown": "^0.2.3",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "prosemirror": "^0.11.1",
    "ramda": "^0.25.0",
    "rc-editor": "^1.5.3",
    "react": "^16.6.1",
    "react-dom": "^16.4.1",
    "react-draft-wysiwyg": "^1.12.13",
    "react-drafts": "^1.0.3",
    "react-final-form": "^3.6.6",
    "react-fontawesome": "^1.6.1",
    "react-html-parser": "^2.0.2",
    "react-lz-editor": "^0.12.1",
    "react-markdown-editor": "^1.0.0",
    "react-player": "^1.6.6",
    "react-prosemirror": "^0.2.1",
    "react-quill": "^1.3.2",
    "react-redux": "^5.0.7",
    "react-responsive-modal": "^3.5.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.0.0-next.2150693d",
    "react-svg": "^6.0.15",
    "react-tabs": "^2.3.0",
    "react-universal-component": "^3.0.3",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "styled-components": "^3.4.9",
    "timeago.js": "^4.0.0-beta.1",
    "video-react": "^0.13.0"
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "react-scripts build && firebase deploy"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.5",
    "classnames": "^2.2.6",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "stylelint": "^9.3.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "svg-react-loader": "^0.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add",
      "eslint"
    ],
    "*.css": [
      "stylelint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "trailingComma": "all",
          "printWidth": 120
        }
      ],
      "import/no-unresolved": false,
      "import/no-absolute-path": false,
      "no-shadow": false
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true,
      "declaration-colon-newline-after": null
    }
  },
  "browserslist": [
    ">0.25%",
    "not op_mini all",
    "ie 11"
  ]
}
